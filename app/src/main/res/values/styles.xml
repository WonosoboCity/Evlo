<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/green_A200</item>
    </style>

    <style name="bottomBarTheme" parent="AppTheme">
        <!--ripple color of bottom bar-->
        <item name="colorControlHighlight">@color/teal_A100</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TranslucentStatus">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <!--<item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">true</item>-->
        <!--<item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/teal_700</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Base.ThemeOverlay.AppCompat.Light" />

    <style name="container_tablet_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="container_tablet_constrain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="main_recycler_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SearchToolbar_TitleText"
        parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/search_title_text_size</item>
        <item name="android:textColor">#a0000000</item>
    </style>

    <style name="SearchToolbar_Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/search_toolbar_height</item>
    </style>

    <style name="GetStartedBtn" parent="AppTheme">
        <item name="colorButtonNormal">@color/triad_market_blue_bg</item>
    </style>

    <style name="CardActionTextBtn" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/card_action_button_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

</resources>
