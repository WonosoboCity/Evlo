<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:elevation="2dp"
    app:cardPreventCornerOverlap="false"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_variety"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_large"
            android:paddingTop="@dimen/card_padding_large"
            android:paddingRight="@dimen/card_padding_large"
            android:paddingBottom="@dimen/card_padding_medium"
            tools:text="Basmati"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/text_modal_price"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_large"
            android:paddingRight="@dimen/card_padding_large"
            android:paddingBottom="4dp"
            tools:text="Modal price: 3950"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_minimum_price"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_large"
            android:paddingRight="@dimen/card_padding_large"
            android:paddingBottom="4dp"
            tools:text="Minimum price: 3900"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_maximum_price"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_large"
            android:paddingRight="@dimen/card_padding_large"
            android:paddingBottom="4dp"
            tools:text="Maximum price: 4000"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_date"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_large"
            android:paddingRight="@dimen/card_padding_large"
            android:paddingBottom="4dp"
            tools:text="Arrival date: 30/04/2016"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_market_name"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_large"
            android:paddingRight="@dimen/card_padding_large"
            android:paddingBottom="4dp"
            tools:text="Market: Chirala"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_district_name"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_large"
            android:paddingRight="@dimen/card_padding_large"
            android:paddingBottom="4dp"
            tools:text="District: Prakasam"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_state_name"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_large"
            android:paddingRight="@dimen/card_padding_large"
            android:paddingBottom="4dp"
            tools:text="State: Andhra Pradesh"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>