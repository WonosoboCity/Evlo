<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="info.santhosh.evlo.CommodityListActivity">

    <!--
    This layout is a two-pane layout for the Commodities
    master/detail flow.
    
    -->

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/commodity_list"
        android:name="info.santhosh.evlo.CommodityListFragment"
        android:layout_width="@dimen/item_width"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="info.santhosh.evlo.CommodityListActivity"
        tools:listitem="@layout/commodity_list_content" />

    <FrameLayout
        android:id="@+id/commodity_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:context="info.santhosh.evlo.CommodityListActivity"
        tools:layout="@layout/commodity_detail"/>

</LinearLayout>
